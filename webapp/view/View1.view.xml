<mvc:View controllerName="sample.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layoout">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Panel expandable="true" headerText="Student education">
						<content>
							<Label text="{i18n>textDesc}" class="sapUi5SmallMarginTop" />
			<Input placeholder="{i18n>textDesc}" width="40rem" class="sapUi5TinyMarginBegin"/>
			<Label text="{i18n>Select}" class="sapUi5SmallMarginTop"/>
			<Select forceSelection="false">
				<items>
					<core:Item key="CE"   text="Civil Engineering"/>
					<core:Item key="MECH" text="Mechanical Engineering"/>
					<core:Item key="IT"   text="Information Technology" />
				</items>
			</Select>
			</content>
			</Panel>
				<Panel expandable="true" headerText="Student subjects">
						<content>
							<Label text="{i18n>textDescM}" class="sapUi5SmallMarginTop"/>
		<Input placeholder="{i18n>textDescM}" width="50rem" class="sapUi5TinyMarginBegin"/>
		<ComboBox/>
	
				
			</content>
			</Panel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>